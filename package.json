  },
  "devDependencies": {
    "babel": "6.5.2",
    "babel-core": "6.13.2",
    "babel-eslint": "^6.1.2",
    "babel-loader": "6.2.5",
    "babel-plugin-__coverage__": "11.0.0",
    "babel-preset-es2015": "6.13.2",
    "babel-preset-es2015-webpack": "^6.4.3",
    "babel-preset-stage-2": "6.13.0",
    "babel-register": "^6.18.0",
    "cpy-cli": "1.0.1",
    "css-loader": "0.23.1",
    "eslint": "^3.12.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-import-resolver-webpack": "^0.8.0",
    "eslint-loader": "1.5.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "ghooks": "1.3.2",
    "istanbul-instrumenter-loader": "^1.2.0",
    "karma": "^1.2.0",
    "karma-babel-preprocessor": "^6.0.1",
    "karma-chrome-launcher": "2.0.0",
    "karma-coverage": "1.1.1",
    "karma-firefox-launcher": "1.0.0",
    "karma-tap": "^3.1.1",
    "karma-tap-pretty-reporter": "^3.0.5",
    "karma-tape": "0.0.1",
    "karma-tape-reporter": "^1.0.3",
    "karma-webpack": "1.8.0",
    "npm-run-all": "3.0.0",
    "opt-cli": "1.5.1",
    "rimraf": "2.5.4",
    "style-loader": "0.13.1",
    "tape": "^4.6.3",
    "tape-catch": "^1.0.6",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2",
    "webpack-validator": "2.2.7"
  },
  "config": {
    "ghooks": {
      "pre-commit": "opt --in pre-commit --exec \"npm run validate\""
    }
  },
  "scripts": {
    "test": "tape-watch -r babel-register -1 test/*",
    "watch:test": "karma start karma.config.js --auto-watch --no-single-run",
    "validate": "npm-run-all --parallel validate-webpack:* lint test build",
    "validate-webpack:dev": "webpack-validator webpack.config.js --env.dev",
    "validate-webpack:prod": "webpack-validator webpack.config.js --env.prod",
    "clean-dist": "rimraf dist",
    "copy-files": "cpy src/index.html src/img/favicon/favicon.ico dist",
    "copy-cms": "cpy src/admin/index.html src/admin/config.yml dist/admin",
    "clean-and-copy": "npm run clean-dist && npm run copy-files && npm run copy-cms",
    "prestart": "npm run clean-and-copy",
    "start": "webpack-dev-server --env.dev --content-base dist",
    "prebuild": "npm run clean-and-copy",
    "prebuild:prod": "npm run clean-and-copy",
    "build": "webpack --env.dev",
    "build:prod": "webpack --env.prod -p",
    "lint": "eslint ."
  }
}
